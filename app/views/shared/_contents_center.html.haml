.wrapper__contents__center__memo__info
  .wrapper__contents__center__memo__info__title
    = simple_format(@memo.title)
  .wrapper__contents__center__memo__info__date
    = simple_format(@memo.updated_at.strftime("%Y年%m月%d日 %H時%M分"))
.wrapper__contents__center__memo__content
  .wrapper__contents__center__memo__content__text
    = simple_format(@memo.text) if @memo.text.present?
  = image_tag @memo.image.url, class: 'image', size: '300x300' if @memo.image.present?
.wrapper__contents__center__memo__tags
  - @tags.each do |tag|
    %i.fas.fa-tags
    .wrapper__contents__center__memo__tags__name
      = simple_format(tag.name) if tag.present?
.wrapper__contents__center__memo__icon
  = link_to edit_memo_path(@memo) do
    = icon('fas',' fa-edit')